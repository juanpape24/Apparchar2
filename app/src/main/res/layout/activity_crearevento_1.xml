<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/MainR"
    android:background="@color/Blancox"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/topBar"
        android:background="@color/Cerulean"
        android:layout_height="40dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apparchar"
            android:textColor="@color/Blancox"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/topBar"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vamos a crear tu evento"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/Tangarine"
            android:textSize="50dp"
            android:id="@+id/t1"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:id="@+id/tx1"
            android:text="Nombre"
            android:textSize="15dp"
            android:layout_margin="20dp"
            android:textColor="@color/Cerulean"
            />






        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginHorizontal="20dp"
            android:id="@+id/e1"
            android:hint="Nombre de tu evento"
            android:layout_below="@+id/tx1"
            android:background="@drawable/ggxd"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/e1"
            android:id="@+id/tx2"
            android:text="Descripcion"
            android:textSize="15dp"
            android:layout_margin="20dp"
            android:textColor="@color/Cerulean"
            />




        <EditText
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="20dp"
            android:padding="10dp"
            android:id="@+id/e2"
            android:hint="Escribe aqui una descripcion"
            android:layout_below="@+id/tx2"
            android:background="@drawable/ggxd"

            />




        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="siguiente"
            android:id="@+id/next1"
            android:gravity="bottom"
            android:layout_gravity="end"
            android:layout_marginTop="50dp"
            android:padding="20dp"
            android:onClick="next1"
            android:textColor="#000"
            android:background="@color/Amarello"
            />


    </LinearLayout>

    </ScrollView>






</RelativeLayout>