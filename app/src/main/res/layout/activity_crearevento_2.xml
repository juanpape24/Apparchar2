<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/MainR"
    android:background="@color/Blancox"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:id="@+id/topBar"
        android:background="@color/Cerulean"
        android:layout_height="40dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apparchar"
            android:textColor="@color/Blancox"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>



    <ScrollView

        android:layout_width="match_parent"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/topBar"
        android:layout_height="match_parent">




   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cuentanos"
        android:textColor="@color/Tangarine"
        android:layout_below="@+id/topBar"
        android:textSize="50dp"
        android:id="@+id/t2"
        android:layout_margin="20dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t2"
        android:id="@+id/tx3"
        android:text="Donde será el evento ?"
        android:textSize="15dp"
        android:layout_margin="20dp"
        android:textColor="@color/Cerulean"
        />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:layout_marginHorizontal="20dp">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mapa"
        android:layout_marginHorizontal="10dp"
        android:background="@color/Amarello"
        android:onClick="MapAux"
        android:textColor="#000"
        android:id="@+id/ButtonGeocoding"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/defaultDirection"
            android:text="Calle 75a#28b-23 ,Bogotá"
            android:padding="20dp"
            android:background="@drawable/ggxd"
            />


       </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/e3"
        android:id="@+id/tx4"
        android:text="¿A que categorias pertenece ?"
        android:textSize="15dp"
        android:layout_margin="20dp"
        android:textColor="@color/Cerulean"
        />


       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           >

           <LinearLayout
               android:id="@+id/categoriasCheck"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:orientation="vertical">

           </LinearLayout>

       </ScrollView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="siguiente"
        android:id="@+id/next2"
        android:onClick="next2"
        android:padding="20dp"
        android:gravity="bottom"
        android:layout_marginTop="10dp"
        android:layout_gravity="end"
        android:textColor="#000"
        android:background="@color/Amarello"

        />

   </LinearLayout>

    </ScrollView>

</RelativeLayout>