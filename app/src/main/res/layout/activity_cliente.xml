<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.Cliente">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            android:orientation="vertical">





            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fotoPerfil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="30dp"

                android:src="@mipmap/picture_default"
                android:layout_gravity="center"/>
            <Button
                android:id="@+id/cargarFoto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:text="Cargar Foto"
                android:onClick="upload">


            </Button>





            <TextView
                android:id="@+id/nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="40dp"
                android:text="@string/nombre" />

            <EditText
                android:id="@+id/nombre1"
                android:layout_width="346dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:hint="@string/nombre1"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/apellido"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="@string/apellido" />

            <EditText
                android:id="@+id/apellido1"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:hint="@string/apellido1"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/edad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="@string/edad" />

            <EditText
                android:id="@+id/edad1"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:hint="@string/edad1"
                android:inputType="number" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="@string/correo" />

            <EditText
                android:id="@+id/email1"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:hint="@string/correo1"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/cel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="@string/cel" />

            <EditText
                android:id="@+id/cel1"
                android:layout_width="342dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:hint="@string/cel1"
                android:inputType="number" />

            <TextView
                android:id="@+id/user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="@string/usuario" />

            <EditText
                android:id="@+id/user1"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:hint="@string/usuario1"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/pass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="@string/pass1" />

            <EditText
                android:id="@+id/pass1"
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:hint="@string/pass"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/pass2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:text="@string/pass2" />

            <EditText
                android:id="@+id/pass3"
                android:layout_width="344dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:ems="10"
                android:hint="@string/pass3"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="registrar"
                android:text="@string/registrar" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>